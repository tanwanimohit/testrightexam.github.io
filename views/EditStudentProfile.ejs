      <!--Register Student-->
      <form action="EditStudentProfile" method="post">
			<center style="color: #007bff; font-size: 6vh; font-style:bold; font-family: 'Product Sans'; margin-top:20px;">Register as Student</center>  
			<div class="container col-sm-6">
			<!-- Register div -->
			<br>
			<h4>Additional Information</h4>
            <hr>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="StdName" class="form-control" id="exmname" value="<%= data.Name %>" placeholder="Name">
              </div>
			<div class="form-group">
			  <label for="stdinstname">Institute Name</label>
			  <input type="text" class="form-control" id="stdinstname" name="stdinstname" value="<%= data.InstituteName %>" placeholder="Institite Name" >
			</div>
			<div class="form-group">
			<label for="stdinst">Institute</label>
			   <select class="selectpicker" name="stdinsttype" data-style="btn" data-width="100%" title="Choose Your Institute Type" data-live-search="true">
				<option value="Open" <% if(data.InstituteType=="Open"){  %>selected <% } %>>Open</option>
				<option value="Private" <% if(data.InstituteType=="Private"){  %>selected <% } %>>Private</option>
			  </select>
			</div>
			<div class="form-group">
				<label for="address">Address</label>
				<textarea class="form-control" rows="5" id="stdadress"  name="stdadress" placeholder="Address"><%= data.InstituteAddress %></textarea>
			</div> 
			<label for="country">Country</label>
			   <select class="selectpicker" name="stdconttype" data-style="btn" data-width="100%" title="Choose Country" data-live-search="true">
				<option value="India" <% if(data.InstituteCountry=="India"){  %>selected <% } %>>India</option>
				<option value="Pakistan" <% if(data.InstituteCountry=="Pakistan"){  %>selected <% } %>>Pakistan</option>
			  </select>
			<div class="form-group">
				<label for="stdcontact">Contact No</label>
				<input type="number" class="form-control" name="StuContact" value="<%= data.StudentContact %>" id="stdcontact" placeholder="Mobile" >
            </div>
            <div class="form-group">
                <label for="name">Password</label>
                <input type="password" class="form-control" id="usrpass" name="StdPass" value="<%= data.Password %>" placeholder="Password" required>
              </div>
			<input type="submit" class="btn btn-primary btn-block" value="Save & Continue"/> 
			
			</div><br>
        </form>   
    </body>
